  "license": "MIT",
  "devDependencies": {
    "@types/is-ci": "^2.0.0",
    "@types/jest": "^25.2.1",
    "@types/yup": "0.26.12",
    "@yarnpkg/builder": "^2.x",
    "@yarnpkg/cli": "^2.x",
    "@yarnpkg/core": "^2.x",
    "@yarnpkg/fslib": "^2.x",
    "@yarnpkg/libzip": "^2.x",
    "@yarnpkg/plugin-pack": "2.x",
    "jest": "^25.3.0",
    "jest-pnp-resolver": "^1.2.1",
    "ts-jest": "^25.3.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@yarnpkg/fslib": "^2.x",
    "@yarnpkg/libzip": "^2.x",
    "@yarnpkg/parsers": "^2.x",
    "@yarnpkg/plugin-pack": "2.x",
    "@yarnpkg/plugin-pnp": "^2.x",
    "@yarnpkg/pnp": "^2.x",
    "@yarnpkg/pnpify": "^2.x",
    "await-semaphore": "0.1.3",
    "clipanion": "^2.x",
    "date-fns": "^2.12.0",
    "is-ci": "^2.0.0",
    "p-limit": "^2.3.0",
    "p-queue": "^6.3.0",
    "strip-ansi": "^6.0.0"
  },
  "scripts": {
    "build:plugin-stage": "builder build plugin",
    "update:workspace": "mkdir -p ../../../.yarn/plugins/@ojkelly && cp ./bundles/@yarnpkg/plugin-build.js ../../../.yarn/plugins/@ojkelly/plugin-build.js",
    "update:patch-name": "sed -i '' 's|@yarnpkg/plugin-build|@ojkelly/plugin-build|g' ./bundles/@yarnpkg/plugin-build.js",
    "update": "yarn build:plugin-stage && yarn update:patch-name && yarn update:workspace",
    "update:local": "yarn build:plugin-stage && yarn update:workspace",
    "release": "yarn build:plugin-stage && yarn update:patch-name && yarn update:workspace",
    "build": "update",
    "clean": "rimraf build bundles",
    "test": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/ojkelly/yarn.build.git"
  },
  "publishConfig": {
    "main": "./bundles/@ojkelly/plugin-build.js"
  },
  "files": [
    "/bundles/**/*"
  ]
}
