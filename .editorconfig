# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
quote_type = double
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 200 # becuase of some markdown tables

[*.ts]
curly_bracket_next_line = false
continuation_indent_size = 4
indent_brace_style = BSD KNF
indent_size = 2
max_line_length = 80
spaces_around_brackets = outside
spaces_around_operators = true

[*.css]
continuation_indent_size = 4
indent_brace_style = BSD KNF
indent_size = 2
max_line_length = 80
spaces_around_brackets = outside
spaces_around_operators = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.yaml]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space
